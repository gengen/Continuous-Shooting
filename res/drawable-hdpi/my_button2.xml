<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
<layer-list>
<item>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle"
>
	<gradient
		android:startColor="#000033"
		android:endColor="#000033"/>
	
	<corners
		android:radius="10dip"/>
	
	<padding
		android:top="2dp"
		android:bottom="2dp"
		android:left="10dp"
		android:right="10dp"/>
	
	<stroke
		android:color="#000033"/>
</shape>
</item>
</layer-list>
</item>

<item>
<layer-list>
<item>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle"
>
	<gradient
		android:startColor="#000033"
		android:endColor="#0099cc"/>
	
	<corners
		android:radius="10dip"/>
	
	<padding
		android:top="2dp"
		android:bottom="2dp"
		android:left="10dp"
		android:right="10dp"/>
	
	<stroke
		android:color="#000033"/>
</shape>
</item>
</layer-list>
</item>
</selector>